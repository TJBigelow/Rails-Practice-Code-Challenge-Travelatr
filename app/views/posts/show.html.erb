<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Likes:</strong>
  <%= @post.likes %> <%= link_to "+", like_path(@post), method: :post%>
</p>

<p>
<strong>Blogger:</strong>
<%= link_to @post.blogger.name, blogger_path(@post.blogger) %>
</p>

<p>
  <strong>Destination:</strong>
  <%= link_to @post.destination.name, destination_path(@post.destination) %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
